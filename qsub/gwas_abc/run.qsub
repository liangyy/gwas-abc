#PBS -l mem=16gb
#PBS -e logs/run_$CONFIG.err
#PBS -o logs/run_$CONFIG.out
#PBS -N gwas_abc

# ARGS PREP: script to generate the gwas table

source ~/.bash_profile
source ~/.bashrc

SNMK=/gpfs/data/im-lab/nas40t2/yanyul/softwares/miniconda2/envs/mixqtl/bin/snakemake

module load gcc/6.2.0 
